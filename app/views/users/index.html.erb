<h1>Let's Talk</h1>

<div class="">
<% @users.each do |user| %>
  <div class="span3">
    <h3><%= link_to "#{user.firstname} #{user.lastname}", user_path(user) %></h3>
    <% user.user_languages.each do |user_language| %>
      <%= user_language.language.name %>
      <%= user_language.level %>
    <% end %>
    <br/>
    <% if user.avatar? %>
      <%= link_to image_tag(user.avatar_url(:detail)), "#info#{user.id}"%>
    <% else %>
      <%= link_to image_tag('rails.png'), "#info#{user.id}"%>
    <% end %>

    <section>
      <label class="label label-success">
        <%= pluralize(user.friendships.count, "Friend") %> |
        <%= pluralize(user.friendships_as_friend.count, "Follower") %>
      </label>
    </section>
    
    <section id="info<%= user.id %>" class="hidden">
      <%= user.email %><br />
      <%= user.skype_account %><br />
      <%= user.biography %>
    </section>

  <%= render 'manage', :user => user %>
  <%= render 'friendship', :user => user %>

  </div>
<% end %>
</div>


