<p id="notice"><%= notice %></p>


<h3><%= @user.firstname %> <%= @user.lastname %></h3>
  
  <% if @user.avatar? %>
    <%= image_tag @user.avatar_url(:detail) %>
  <% end %>
  
  <% @user.user_languages.each do |user_language| %>
    <li><%= user_language.language.name %> (<%= user_language.level %>)</li>
  <% end %>

  <p>Biography: <br/>
    <%= @user.biography %>
  </p>

  <p>Email: <br/>
    <%= @user.email %>
  </p>

  <p>Skype Account: <br/>
    <%= @user.skype_account %>
  </p>

  <section>
    <% if @user.available_to_meet %>
      <label class="label label-success">Available to meet</label>
    <% end %>
  </section>

  <h6> Comments: </h6>
    <%unless current_user %>
      <p> Please <%= link_to 'log in', login_path %> to leave a comment </p>
    <% end %>

  <div>
    <% @user.comments.each do |comment| %>
      <% if comment.user.avatar? %>
        <%= image_tag comment.user.avatar.mini.url %>
      <% end %>
      "<%= comment.content %>"
        <%= comment.user.lastname %> on <%= comment.created_at.strftime('%c') %>
        <%if can? :destroy, comment %>
          <%=link_to 'delete', comment_path(comment.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
    <% end %>   
  </div><br>
<%= render partial: "comments/form" if can? :create, @comment %>  



<% if can? :update, @user %>
  <%= link_to 'Edit Profile', edit_user_registration_path, :class => "btn" %>
<% end %>
<% if can? :delete, @user %>
  <%= link_to 'Delete', user_path, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
<% end %>
<br/>
<%= link_to 'Back', users_path %>