<hr />
<div class="row">
<h3>Languages</h3>
<%= f.fields_for :user_languages do |user_language_form| %>
  <%= user_language_form.collection_select :language_id, Language.all, :id, :name %>
  <%= user_language_form.label :level %>
  <%= user_language_form.select :level, [['Low'], ['Medium'], ['High'], ['Native']] %>
  <br/>
  <%= user_language_form.link_to_remove "Remove language" %>
<% end %>
  <span class="row">
<%= f.link_to_add "Add language", :user_languages, :class => "btn" %>
</span>
</div>
